@model List<Customer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Customer List";
}

@foreach (Customer c in Model)
{
    <div>
        <h6>
            @c.FirstName.
        </h6>
        <p>Home store: @c.HomeStore. Senior Discount Status: @c.SeniorDiscount </p>
        <a class="btn btn-light" asp-action="ViewDetails" asp-route-Id="@c.CustomerId">View Details </a>
    </div>
}